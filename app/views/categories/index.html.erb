<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.desc %></td>
        <div class="btn-group" role="group" aria-label="...">
          <td><%= link_to 'Show', category, class: "btn btn-default" %></td>
          <% if can? :crud, @category %>
          <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-default" %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"%></td>
          <% end %>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :crud, @category %>
<%= link_to 'New Category', new_category_path, class: "btn btn-default" %>
<% end %>
